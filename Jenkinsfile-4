pipeline {
    agent any
    tools {
    	gradle '7.5-rc-4'
    }
    stages {
	stage ('Build'){
	    steps {
	       sh './gradlew'	   
	    }	
	}
        stage('Test') {
            steps {
                sh './gradlew check'
            }
        }
    }
    post {
        always {
            junit 'build/reports/**/*.xml'
        }
    }
}


