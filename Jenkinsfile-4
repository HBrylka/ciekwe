pipeline {
    agent any
    stages {
	stage ('Build'){
	    steps {
	       sh './gradlew'	   
	    }	
	}
        stage('Test') {
            steps {
                sh 'gradle-site-plugin/gradlew check'
            }
        }
    }
    post {
        always {
            junit 'build/reports/**/*.xml'
        }
    }
}


